<div class="centralize">
  <h5 class="align_left"><%= link_to 'Todas provas', races_path %> </h5>
  <div>
    <div class="date_box">
	    <div class="date">
        <div class="big_date"><%= @race.date.strftime('%d') %></div>
        <div class="big_date"><%= @race.date.strftime('%b') %></div>
	    </div>
	    <div class="countdown">20<%= @race.date.strftime('%y') %></div>
    </div>
    <div class="race_title"><%= @race.name %></div>
    <div class="race_title black"><%= @race.distance %></div>
  </div>
  <table class="race">
    <tr class="race_black">
      <td>Número</td>
      <td>Atleta</td>
      <td>Tempo oficial</td>
      <td>Tempo líquido</td>
      <td>Ritmo</td>      
      <td>Classificação</td>
      <td>Distância</td>      
    </tr>

    <% for result in @results %>
      <tr>
        <td><%=h result.start_number %></td>
        <td class="align_left"><%=h result.athlete.name %></td>
        <td><%=h result.official_time.strftime("%H:%M:%S") %></td>
        <td><%=h result.liquid_time.strftime("%H:%M:%S")%></td>
        <td><% if result.pace %><%=h result.pace.strftime("%H:%M")%><% end %></td>                
        <td><%=h result.class_general %></td>
        <td><%=h result.distance %></td>          
      </tr>
    <% end %>
  </table><br />
</div>

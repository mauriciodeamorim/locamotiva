<div class="centralize">
    <h5 class="align_left">Todas as provas</h5>
    <div>
	    <div class="date_box">
		    <div class="date">
	        <div class="big_date"><%= @race.date.strftime('%d') %></div>
	        <div class="big_date"><%= @race.date.strftime('%b') %></div>
		    </div>
		    <div class="countdown"> </div>
	    </div>
      <div class="race_title"><%= @race.name %></div>
      <div class="race_title black"><%= @race.distance %></div>
    </div>

    <table class="race">
      <tr class="race_black">
        <td>Número</td>
        <td>Atleta</td>
        <td>Tempo oficial</td>
        <td>Tempo líquido</td>
        <td>Classificação</td>
      </tr>

    <% for result in @results %>
      <tr>
        <td><%=h result.start_number %></td>
        <td><%=h result.athlete.name %></td>
        <td><%=h result.official_time.strftime("%H:%M:%S") %></td>
        <td><%=h result.liquid_time.strftime("%H:%M:%S")%></td>
        <td><%=h result.class_general %></td>
      </tr>
    <% end %>
    </table>
    <div class="align_left"><%= link_to 'Todas provas', races_path %> </div>
</div>


<h1>Listing athletes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sex</th>
    <th>Birthday</th>
    <th>Cpf</th>
    <th>Phone</th>
    <th>Nick</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @athletes.each do |athlete| %>
  <tr>
    <td><%= athlete.name %></td>
    <td><%= athlete.sex %></td>
    <td><%= athlete.birthday %></td>
    <td><%= athlete.cpf %></td>
    <td><%= athlete.phone %></td>
    <td><%= athlete.nick %></td>
    <td><%= athlete.email %></td>
    <td><%= link_to 'Show', athlete %></td>
    <td><%= link_to 'Edit', edit_athlete_path(athlete) %></td>
    <td><%= link_to 'Destroy', athlete, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

